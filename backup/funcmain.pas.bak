unit FuncMain;

{$mode objfpc}{$H+}

interface

uses
  Classes, SysUtils, FormMain;

function OpenDlg(Title:string; Filter:string; InitPath: String; Filename:string):
         Boolean;

implementation

function OpenDlg(Title:string; Filter:string; InitPath: String; Filename:string):
         Boolean;
begin
  FrmMain.OpenDlg.Title:= Titulo;
  FrmMain.OpenDlg.Filter := Filtro;
  FrmMain.OpenDlg.FileName:= NombreArchivo;
  FrmMain.OpenDlg.InitialDir:= RutaInicial;
  Result:= FrmMain.OpenDlg.Execute;
end;

end.

